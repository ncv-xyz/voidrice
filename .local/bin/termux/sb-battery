#!/bin/sh

# sb-battery wrapper for Termux

# Sets up the status and capacity
case "$(termux-battery-status | grep status | cut -d'"' -f4)" in
	"FULL") status="âš¡" ;;
	"DISCHARGING") status="ğŸ”‹" ;;
	"CHARGING") status="ğŸ”Œ" ;;
	"NOT CHARGING") status="ğŸ›‘" ;;
	"UNKNOWN") status="â™»ï¸" ;;
	*) exit 1 ;;
esac

capacity="$(termux-battery-status | grep percentage | sed 's/.*: //;s/,$//')"

# Will make a warn variable if discharging and low
[ "$status" = "ğŸ”‹" ] && [ "$capacity" -le 25 ] && warn="â—"

# Prints the info
printf "%s%s%d%%" "$status" "$warn" "$capacity"
printf "\\n"
