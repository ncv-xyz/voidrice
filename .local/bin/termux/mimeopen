#!/bin/sh

# mimeopen wrapper for Termux.

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
	for var in "$@" ; do case "$var" in
		-a|--ask) ask='1' ;;
		-*) ;;
		*) args="$args $var" ;;
	esac done
	set -- "${args# }"
	file="$1"
	[ -z "$ask" ] || { termux-share "$file" ; exit ;}
	[ -z "$1" ] &&
		xargs sh -c 'termux-share -d "$file"' ||
		termux-share -d "$file"
else
	"$PREFIX"/bin/vendor_perl/mimeopen "$@"
fi
