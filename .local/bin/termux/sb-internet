#!/bin/sh

# sb-battery wrapper for Termux

case "$(termux-wifi-connectioninfo | grep supplicant | cut -d'"' -f4 2>/dev/null)" in
	"COMPLETED") wifiicon="$(termux-wifi-connectioninfo | awk '/rssi/ { print "ğŸ“¶", int( ($2 + 110 ) * 100 / 70) "% " }')" ;;
	"DISCONNECTED") wifiicon="ğŸ“¡ " ;;
	"UNINITIALIZED") ;;
	*) wifiicon="âŒ " ;;
esac

printf "%s%s\n" "$wifiicon" "â"
