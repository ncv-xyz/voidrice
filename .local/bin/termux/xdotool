#!/bin/sh

# xdotool wrapper for Termux.

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
	[ "$1" = "type" ] && shift || exit 0
	for i in "$@" ; do case "$i" in
		--[deglmpqrsw]*) shift 2 ;;
		-*) shift ;;
	esac done
	[ "$1" = "-" ] && xargs -0 echo || echo "$@"
else
	"$PREFIX"/bin/xdotool "$@"
fi
